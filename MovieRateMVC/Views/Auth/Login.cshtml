@using MovieRateMVC.Models.Auth
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
	<div class="form-group mb-3">
		<label for="Email">E-mail</label>
		<input type="email" class="form-control" asp-for="Email" required>
	</div>

	<div class="form-group mb-3">
		<label for="Password">Password</label>
		<input type="password" class="form-control" asp-for="Password" required>
	</div>

	<div class="form-check">
		<input type="checkbox" class="form-check-input" asp-for="RememberMe">
		<label for="RememberMe" class="form-check-label">Remember me</label>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>
	<input type="submit" class="btn btn-primary mt-3" value="Login">
</form>