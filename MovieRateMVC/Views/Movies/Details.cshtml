 @model MovieRateMVC.Models.Movies.MovieDetailsModel

@{
	ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

<p>@Model.Description</p>

<p>Genre@(Model.Genres.Count == 1 ? "" : "s"):
	@string.Join(", ", Model.Genres)
</p>

@if (Model.ReleaseDate != null)
{
	<p>Release date: @Model.ReleaseDate</p>
}

@if (Model.Director != null)
{
	<p>Director: @Model.Director</p>
}

<div>
	<p>Rate movie</p>
	<form asp-controller="Movies" asp-action="Rate" asp-route-id="@Model.Id" method="post">
		<input type="radio" name="rate" value="1" id="rate1" class="form-check-input" />
		<label for="rate1" class="form-check-label">1</label>
		<input type="radio" name="rate" value="2" id="rate2" class="form-check-input" />
		<label for="rate1" class="form-check-label">2</label>
		<input type="radio" name="rate" value="3" id="rate3" class="form-check-input" />
		<label for="rate1" class="form-check-label">3</label>
		<input type="radio" name="rate" value="4" id="rate4" class="form-check-input" />
		<label for="rate1" class="form-check-label">4</label>
		<input type="radio" name="rate" value="5" id="rate5" class="form-check-input" />
		<label for="rate1" class="form-check-label">5</label><br />
		<input type="submit" value="Save" class="btn btn-primary" />
	</form>
</div>